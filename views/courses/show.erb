<div class="buttons">
  <button type="button" name="button"><a href="/students/new">Add Student</a></button>
  <button type="button" name="button">Delete Course</button>
</div>

<form class="" action="/courses/<%= @course.course_id %>" method="post">
  <input type="hidden" name="_method" value="delete">
  <input type="submit" name="" value="Remove Course">
</form>


<div class="">
  <ul>
    <% @course_attendance.each do |student_status|%>
    <form action="/courses/<%= @course.course_id %>" method="post">
      <div class="form-group">
        <input type="hidden" name="student_id" value="<%= student_status.student_id %>">
      </div>
      <div class="form-group">
        <label for="exampleFormControlInput1">Name</label>
        <h4><%= student_status.first_name %> <%= student_status.last_name %></h4>
      </div>
      <div class="form-group">
        <label for="exampleFormControlSelect1">Date</label>
        <input type="date" name="attendance_date" value="<%= Date.today %>">
      </div>
      <div class="form-group">
        <label for="exampleFormControlSelect2">Status</label>
        <select class="form-control" name="status" id="exampleFormControlSelect2" >
          <!-- Below is the autofill that doesnt work, use  "selected = "selected" -->
          <option <% if student_status.attendance_date == Time.now.strftime("%Y-%m-%d") && student_status.attendance_status_id == 1 %> selected="selected" <% end %>>On Time</option>
          <option <% if student_status.attendance_date == Time.now.strftime("%Y-%m-%d") && student_status.attendance_status_id == 2 %> selected="selected" <% end %>>Slightly late(5 minutes)</option>
          <option <% if student_status.attendance_date == Time.now.strftime("%Y-%m-%d") && student_status.attendance_status_id == 3 %> selected="selected" <% end %>>Very late(over 30 minutes)</option>
          <option <% if student_status.attendance_date == Time.now.strftime("%Y-%m-%d") && student_status.attendance_status_id == 4 %> selected="selected" <% end %>>Absent</option>
          <option <% if student_status.attendance_date == Time.now.strftime("%Y-%m-%d") && student_status.attendance_status_id == 5 %> selected="selected" <% end %>>Authorized Absence</option>
        </select>
      </div>
      <div class="form-group">
        <label for="exampleFormControlTextarea1">Description</label>
        <textarea class="form-control" name="description" id="exampleFormControlTextarea1">
          <% if student_status.attendance_date == Time.now.strftime("%Y-%m-%d")%> <%= student_status.description %>
          <% end %>
        </textarea>
      </div>
      <div class="form-group">
        <input type="submit" value="Save Attendance">
      </div>
    </form>
    <% end %>
  </ul>
</div>
