<form class="" action="/students/<%= @student.student_id %>" method="post">

  <% if @student.student_id%>
		<input type="hidden" name="_method" value="put">
	<% end %>

  <div class="form-group">
    <label>First Name</label>
    <input type="text" name="first_name" value="<%= @student.first_name %>" placeholder="First Name">
  </div>
  <div class="form-group">
    <label>Last Name</label>
    <input type="text" name="last_name" value="<%= @student.last_name %>" placeholder="Last Name">
  </div>
  <div class="form-group">
    <label>Course ID</label>
    <select name="course_id">
      <% @courses.each do |course| %>
        <option value="<%= course.course_id %>">
          <%= course.name %>
        </option>
      <% end %>
    </select>
  </div>

  <div class="form-group">
    <input class="btn btn-primary" type="submit" name="" value="Submit">
  </div>

</form>
