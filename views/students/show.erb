<div class="container">
  <h2><%= @student.first_name + ' ' + @student.last_name %></h2>
  <h2><%= @course.name %></h2>
</div>

<!-- displays individual student attendance record -->
<table class="table table-bordered table-hover">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Date</th>
      <th scope="col">Attendance Status</th>
      <th scope="col">Description</th>
    </tr>
  </thead>
  <tbody>
    <% @attendance_record.each do |daily_record| %>
    <tr>
      <td> <%= daily_record.attendance_date %> </td>
      <td> <%= daily_record.status  %></td>
      <td> <%= daily_record.description  %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<!-- displays table showing each status % -->
<table class="table">
  <thead class="thead-light">
    <tr>
      <th scope="col"> On Time </th>
      <th scope="col"> Slightly Late </th>
      <th scope="col"> Very Late </th>
      <th scope="col"> Absent </th>
      <th scope="col"> Authorized Absence </th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= (@ot / @attendance_record.length)*100%>%</td>
      <td><%= (@sl / @attendance_record.length)*100%>%</td>
      <td><%= (@vl / @attendance_record.length)*100%>%</td>
      <td><%= (@a / @attendance_record.length)*100%>%</td>
      <td><%= (@aa / @attendance_record.length)*100%>%</td>
    </tr>
  </tbody>
</table>
